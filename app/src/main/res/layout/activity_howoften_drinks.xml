<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:ignore="ExtraText">
    <!--    -->  홈 상태 바
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:weightSum="3"
        android:orientation="horizontal"
        >
        <ImageButton
            android:id="@+id/btn_back_howofter_drinks"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:background="@color/main"
            android:layout_weight="1"
            android:src="@drawable/backarrow"/>
        <!--    -->  홈 상태 바
        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:text="     나의 음주 현황 "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_weight="2"
            android:textSize="30sp"
            android:background="@color/main"

            tools:ignore="ExtraText" />

    </LinearLayout>
    <!--    --> 로고 이미지
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:background="@null"
        android:src="@drawable/icon_main"
        android:layout_marginBottom="10dp"/>


        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@drawable/layout_howmuch_drinks"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="현재 음주 현황 "
                android:textColor="@color/orange"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="-이번 주는 2번 마셨습니다. "
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold">

            </TextView>

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-이번 달은 10번  마셨습니다. "
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp">

        </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-이번 달에 취한 횟수: 2번 "
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp">

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-이번 달에 꽐라된 횟수: 4번 "
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp">

            </TextView>


    </LinearLayout>
    <!--    --> 평균 음주 기록
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/layout_howmuch_drinks"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="평균 음주 횟수"
            android:textColor="@color/orange"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- 주마다  평균 3번 정도 마십니다."
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- 월마다  평균 20번 정도 마십니다."
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            />
    </LinearLayout>






</LinearLayout>

