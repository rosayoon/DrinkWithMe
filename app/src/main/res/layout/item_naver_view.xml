<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/btn_item_drinking_schedule"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="20dp"
    android:paddingTop="6dp"
    android:clickable="true"
    android:paddingBottom="6dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/layout_howmuch_drinks"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:id="@+id/tv_title_naver_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:maxLines="1"
        android:ellipsize="end"
         />




    <TextView
        android:id="@+id/tv_category_naver_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_weight="1"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_address_naver_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:singleLine="true"
        android:maxLines="1"
        android:ellipsize="end"
        />



</LinearLayout>


